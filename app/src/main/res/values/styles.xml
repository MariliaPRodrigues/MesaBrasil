<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Centraliza o título da barra de ação -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:gravity">center</item>
    </style>

    <style name="Fonte8" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="Fonte10" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Fonte12" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textSize">12dp</item>
    </style>

</resources>

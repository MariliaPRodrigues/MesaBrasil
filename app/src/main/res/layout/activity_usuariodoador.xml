<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SCREEN"
    android:background="@drawable/background_color"
    android:padding="16dp">

    <!-- Três botões no centro da tela -->
    <Button
        android:id="@+id/solicitacaocoleta"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="219dp"
        android:text="Solicitação de Coleta"
        android:background="@drawable/button_background" />

    <Button
        android:id="@+id/eventosButton"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Eventos"
        android:layout_marginTop="8dp"

        android:background="@drawable/button_background" />

    <Button
        android:id="@+id/noticiasButton"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Notícias"
        android:layout_marginTop="8dp"

        android:background="@drawable/button_background" />

    <!-- Texto "Alimentos Doados" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alimentos Doados"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"

        android:layout_marginTop="16dp" />

    <!-- Container para o gráfico de pizza -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- Aqui você pode adicionar o gráfico de pizza programaticamente na classe UsuarioDoadorActivity -->
    </FrameLayout>


</LinearLayout>
